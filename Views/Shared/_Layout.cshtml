<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - SandulasWebApp</title>

	<link rel="stylesheet" href="~/css/main.css" />
</head>
<body>
	<header>
		<div class="content">
			<div>
				<a asp-area="" asp-controller="Main" asp-action="About">About Me</a>
				<a asp-area="" asp-controller="Main" asp-action="Resume">Resume</a>
			</div>
			<div style="flex: 0 0 142px; position: relative;">
				<img src="~/images/avatar.jpg" style="position: absolute; left: 0; top: -100px;" />
			</div>
			<div>
				<div style="float: right;">
					<a asp-area="" asp-controller="Main" asp-action="Chatbot">Chatbot</a>
					<a asp-area="" asp-controller="Main" asp-action="Contact">Contact</a>
				</div>
			</div>
		</div>
	</header>

	<a asp-area="" asp-controller="Main" asp-action="About"><b>SandulasWebApp</b></a><br /><br />
	
	@RenderBody()

	<br /><br />
	<footer>
		<p>&copy; 2018 - SandulasWebApp</p>
	</footer>

	@RenderSection("Scripts", required: false)

</body>
</html>
